<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/list_item_attendance_item_container"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingLeft="12dp"
        android:paddingEnd="12dp"
        android:paddingRight="12dp"
        tools:background="@drawable/acbsr_frame_attendance_enable">


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/list_item_attendance_item_day"
            style="@style/CashBlock.Widget.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:textStyle="bold"
            tools:text="$1일$" />


        <View
            android:layout_width="7dp"
            android:layout_height="match_parent" />


        <View
            android:id="@+id/list_item_attendance_item_divider"
            android:layout_width="1dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical"
            android:background="#BC221F" />


        <View
            android:layout_width="8dp"
            android:layout_height="match_parent" />


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/list_item_attendance_item_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/acbsr_ic_attendance_check_complete" />


        <View
            android:layout_width="7dp"
            android:layout_height="match_parent" />


        <androidx.appcompat.widget.AppCompatTextView
            style="@style/CashBlock.Widget.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="@string/acbsr_string_attendance_reward_item_title"
            android:textColor="#FFFFFF"
            android:textSize="12dp"
            android:textStyle="bold" />


        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/list_item_attendance_item_reward"
            style="@style/CashBlock.Widget.TextView"
            android:layout_width="90dp"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/acbsr_frame_attendance_reward_complete"
            android:gravity="center"
            android:textColor="#690004"
            android:textSize="10dp"
            android:textStyle="bold"
            tools:text="$5티켓 보상 완료$" />


    </androidx.appcompat.widget.LinearLayoutCompat>


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp" />


</androidx.appcompat.widget.LinearLayoutCompat>