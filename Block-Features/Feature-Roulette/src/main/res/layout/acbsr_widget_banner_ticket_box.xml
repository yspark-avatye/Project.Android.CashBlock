<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/acb_common_rectangle_ef5350_r5"
    android:gravity="center_vertical"
    android:paddingStart="10dp"
    android:paddingLeft="10dp"
    android:paddingEnd="10dp"
    android:paddingRight="10dp">


    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/acbsr_ic_ticket_box_small" />


    <androidx.appcompat.widget.AppCompatTextView
        style="@style/CashBlock.Widget.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/acbsr_string_ticket_box_banner_title"
        android:textColor="#FFFFFF"
        android:textSize="14dp"
        android:textStyle="bold" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ticket_box_action_confirm"
        style="@style/CashBlock.Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:background="@drawable/acb_common_rectangle_ffffff_r4"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:text="@string/acbsr_string_ticket_box_banner_action_title"
        android:textColor="#212121"
        android:textSize="12dp"
        android:textStyle="bold" />


</androidx.appcompat.widget.LinearLayoutCompat>