<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <!-- region { button - close } -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/notification_help_action_close"
        style="@style/CashBlock.Widget.ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:src="@drawable/acb_common_ic_close_black_14x14" />
    <!-- endregion -->


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/notification_help_action_close"
        android:layout_marginTop="6dp"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">


            <!-- region { HEADER } -->
            <androidx.appcompat.widget.AppCompatTextView
                style="@style/CashBlock.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="@string/acbsr_string_notification_setting_help_title"
                android:textColor="#212121"
                android:textSize="27dp"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/CashBlock.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="28dp"
                android:gravity="center"
                android:text="@string/acbsr_string_notification_setting_help_sub_title"
                android:textColor="#212121"
                android:textSize="14dp" />
            <!-- endregion -->


            <!-- region { section-1 } -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F6F9"
                android:orientation="vertical"
                android:paddingTop="22dp"
                android:paddingBottom="26dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CashBlock.Widget.TextView"
                        android:layout_width="34dp"
                        android:layout_height="wrap_content"
                        android:background="#EF5350"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="#FFFFFF"
                        android:textSize="24dp"
                        android:textStyle="bold" />


                    <View
                        android:layout_width="12dp"
                        android:layout_height="match_parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/notification_help_section_title_1"
                        style="@style/CashBlock.Widget.TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/acbsr_string_notification_setting_help_section_1_title"
                        android:textColor="#212121"
                        android:textSize="14dp" />


                </LinearLayout>


                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/CashBlock.Widget.ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="26dp"
                    android:src="@drawable/acbsr_bitmap_notification_help_1" />


            </LinearLayout>
            <!-- endregion -->


            <!-- region { section-2 } -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical"
                android:paddingTop="22dp"
                android:paddingBottom="26dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CashBlock.Widget.TextView"
                        android:layout_width="34dp"
                        android:layout_height="wrap_content"
                        android:background="#EF5350"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="#FFFFFF"
                        android:textSize="24dp"
                        android:textStyle="bold" />


                    <View
                        android:layout_width="12dp"
                        android:layout_height="match_parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/notification_help_section_title_2"
                        style="@style/CashBlock.Widget.TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#212121"
                        android:textSize="14dp"
                        tools:text="@string/acbsr_string_notification_setting_help_section_2_title" />


                </LinearLayout>


                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/CashBlock.Widget.ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="26dp"
                    android:paddingStart="64dp"
                    android:paddingLeft="64dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:src="@drawable/acbsr_bitmap_notification_help_2" />


            </LinearLayout>
            <!-- endregion -->


            <!-- region { section-3 } -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F4F6F9"
                android:orientation="vertical"
                android:paddingTop="22dp"
                android:paddingBottom="32dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/CashBlock.Widget.TextView"
                        android:layout_width="34dp"
                        android:layout_height="wrap_content"
                        android:background="#EF5350"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="#FFFFFF"
                        android:textSize="24dp"
                        android:textStyle="bold" />


                    <View
                        android:layout_width="12dp"
                        android:layout_height="match_parent" />


                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/notification_help_section_title_3"
                        style="@style/CashBlock.Widget.TextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="#212121"
                        android:textSize="14dp"
                        tools:text="@string/acbsr_string_notification_setting_help_section_3_title" />


                </LinearLayout>


                <androidx.appcompat.widget.AppCompatImageView
                    style="@style/CashBlock.Widget.ImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="26dp"
                    android:paddingStart="64dp"
                    android:paddingLeft="64dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:src="@drawable/acbsr_bitmap_notification_help_3" />


            </LinearLayout>
            <!-- endregion -->


        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</RelativeLayout>