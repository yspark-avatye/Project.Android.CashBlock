<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/acb_core_color_white"
    android:orientation="vertical">

    <!-- region { HeaderView } -->
    <com.avatye.cashblock.base.component.widget.header.HeaderView
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:acb_widget_title="@string/acbso_offerwall_main_title"
        app:acb_widget_view_type="main"
        app:acb_widget_visible_close="true"
        app:acb_widget_visible_more="true" />
    <!-- endregion -->

    <!-- region { Top banner } -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/top_banner_linear_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/acb_core_color_pale_blue" />
    <!-- endregion -->

    <!-- region { Tab } -->
    <LinearLayout
        android:id="@+id/tab_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal"
        tools:background="@color/acb_core_color_light_blue"
        tools:layout_height="48dp" />
    <!-- endregion -->

    <!-- region { ViewPager } -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_viewpager2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!-- endregion -->

    <!-- region { linear bottom Banner } -->
    <com.avatye.cashblock.base.component.widget.banner.BannerLinearView
        android:id="@+id/banner_linear_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/acb_core_color_pale_blue"
        tools:layout_height="55dp" />
    <!-- endregion -->


</LinearLayout>