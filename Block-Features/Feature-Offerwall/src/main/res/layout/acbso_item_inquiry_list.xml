<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="24dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/inquiry_content"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/inquiry_tag"
            style="@style/CashBlock.Widget.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:paddingStart="8.5dp"
            android:paddingTop="0.5dp"
            android:paddingEnd="8.5dp"
            android:paddingBottom="0.5dp"
            android:textColor="#FFF"
            android:textSize="9dp"
            tools:background="@drawable/acb_common_tag_ff9100"
            tools:text="확인중" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/inquiry_title"
            style="@style/CashBlock.Widget.TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:textColor="@color/acb_core_color_main_text"
            android:textSize="14dp"
            tools:text="오마이비트 (레벨1달성하기)" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/inquiry_fold"
            style="@style/CashBlock.Widget.ImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="21dp"
            android:src="@drawable/acb_common_ic_arrow_fold_up_12x6" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D8D8D8" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/inquiry_answer_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F9FF"
        android:orientation="vertical"
        android:padding="20dp"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/inquiry_answer"
            style="@style/CashBlock.Widget.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/acb_core_color_main_text"
            android:textSize="14dp"
            tools:text="안녕하세요!캐시버튼입니다.\n\'미담\'닉네임은 내부 규정상 사용할 수 없는 닉네임입니다." />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/inquiry_retry"
            style="@style/CashBlock.Widget.TextView"
            android:layout_width="110dp"
            android:layout_height="29dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/acb_common_rectangle_99a6b6_r4"
            android:gravity="center"
            android:text="재문의하기"
            android:textColor="@color/acb_core_color_white"
            android:textSize="14dp"
            android:visibility="gone" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>