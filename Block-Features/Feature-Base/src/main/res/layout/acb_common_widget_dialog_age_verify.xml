<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#4c000000"
    tools:theme="@style/CashBlock.Widget.Dialog">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        tools:layout_marginEnd="40dp"
        tools:layout_marginLeft="40dp"
        tools:layout_marginRight="40dp"
        tools:layout_marginStart="40dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/acb_common_rectangle_ffffff_r4"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/button_close"
                style="@style/CashBlock.Widget.ImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:padding="5dp"
                android:src="@drawable/acb_common_ic_close_black_14x14" />


            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/acb_common_age_popup_title"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/CashBlock.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/acb_common_age_popup_subject"
                android:textColor="#757575"
                android:textSize="12dp" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/birth_date"
                android:layout_width="254dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:background="@drawable/acb_common_outline_dfe4e9_r4"
                android:gravity="end|center_vertical"
                android:hint="생년월일(8자리)"
                android:inputType="number"
                android:maxLength="8"
                android:paddingStart="0dp"
                android:paddingEnd="14dp"
                android:textColorHint="#212121"
                android:textSize="14dp" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/birth_date_length"
                style="@style/CashBlock.Widget.TextView"
                android:layout_width="254dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="end|center_vertical"
                android:text="0/8"
                android:textColor="#757575"
                android:textSize="10dp" />


            <androidx.appcompat.widget.AppCompatTextView
                style="@style/CashBlock.Widget.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:text="@string/acb_common_age_popup_description"
                android:textColor="#757575"
                android:textSize="10dp" />


        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_action"
            style="@style/CashBlock.Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/acb_common_rectangle_ffffff_r4"
            android:gravity="center"
            android:text="@string/acb_common_button_submit"
            android:textColor="#000000"
            android:textSize="14dp" />


    </androidx.appcompat.widget.LinearLayoutCompat>


</FrameLayout>